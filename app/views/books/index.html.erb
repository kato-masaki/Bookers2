<% @books.each do |book| %>
<div>
  <p>投稿者：<%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

<h1>New book</h1>
<%= form_with model: @book_new, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>