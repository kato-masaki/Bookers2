<div class="container">
<div class="row">

  <div class="col-md-3">
   <%= render 'users/profile', user: @user %>
   <%= render 'books/new book', book_new: @book_new %>
  </div>

 <div class="col-md-8 offset-md-1">
   <h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

<tbody>
<% @users.each do |user| %>
<tr>
  <td>
  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  </td>
  <td><%= user.name %></td>
  <td>
  <%= link_to user_path(user.id) do %> Show <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>